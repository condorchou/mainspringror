<%= form_for([@client,@user]) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this clients_user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>


  <div class="field">
    <%= f.label :email %> (optional)<br />
    <%= f.text_field :email %>
  </div>

 <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
 </div>

  <div class="field">   
   <%= f.label :client_user_id %>  (required)
<br />
    <%= f.text_field :client_user_id %>
 </div>


<% role_options = ['intranet_user']
role_options << 'client_admin' if current_user.role == 'client_admin'
role_options << 'super_user' if current_user.role == 'super_user'
%>
 <div class="field">
    <%= f.label :role %><br />
    <%= f.select(:role,role_options) %>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
    <%= f.hidden_field :client_id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
